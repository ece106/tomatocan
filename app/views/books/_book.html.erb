<div class="row" >
  <div class="col-lg-9 col-lg-offset-2 col-md-9 col-md-offset-2 col-sm-9 col-sm-offset-2 col-xs-11 " >
    <div class="blurb" style= "text-align:left; ">
      <b><%= link_to(book.title, book) %></b>
    </div>  
  </div>
  <div class="col-md-1 col-sm-1 col-xs-1 ">
    <%= book.genre %>
  </div>
</div>

<div class="row" >
  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 bookcls" >
    <% if book.coverpic.present? && book.coverpic != '' %>
      <%= link_to image_tag(book.coverpic.url.to_s, :size => "100x133", :title => "Purchase " + book.title), book_path(:id => book.id) %>
    <% elsif book.coverpicurl.present? && book.coverpicurl.match(/http/) %>
      <%= link_to image_tag(book.coverpicurl, :size => "100x133", :title => "Purchase " + book.title), book_path(:id => book.id) %>
    <% elsif book.title.match /[0-9A-Za-z]/ %> 
      <div class="covertitle">
        <br><%= link_to book.title, book_path(:id => book.id), :style => 'color:#880000', :title => "Purchase " + book.title %><br><br>
      </div>
      <div class="covername" style= "color:#2c3651">
        <%= link_to @user.name, book_path(:id => book.id), :style => 'color:#2c3651',  :title => "Purchase " + book.title %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <% if book.user_id == current_user.id %>
        <%= button_to "Edit Book", edit_book_path(book.id), method: :get, form_class: 'btn btn-small' %>
      <% end %>
    <% end %>


  </div>
  <div class="col-lg-9 col-md-9 col-md-offset-0 col-sm-9 col-xs-9 " >
    <div class="blurb" style= "color:2c3651">
      <% if book.blurb.present? %> 
        <%= simple_format book.blurb.gsub(/\r\n/, '<br>') %>
      <% end %>
    </div>
  </div>
</div>
<div class="row" >
  <br><br>
</div>
