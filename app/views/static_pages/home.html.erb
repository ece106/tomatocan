
<div class="row" id="heroImage">
    <div class="alert">
      <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %>">
                  <%= value %>
            </div>
      <% end %>
    </div>
    <div class="col-sm-6">
      <div class="title">
        <br><br><br><br>
        <h1 id="heroTitle">JOIN OUR LIVESTREAMS </h1>
        <h2 id="heroTitle">Real People. Real Topics. </h2> <br>
        <h3 id="heroTitle"> Join us for weekly topics on Faith, Innovations, Environmental Issues & more!</h3>
        <br>
        <!--Livestream button-->
        <h2 id="buttonTitle">
        <%= link_to 'View Schedule', events_path, :class => "btn btn-lg btn-primary", :style => "margin-left: 0px; border-radius: 5px;" %>
        <%= link_to 'Join Discussion', "https://crowdpublishtv.herokuapp.com/lisa", :class => "btn btn-lg btn-primary", :style => "margin-left: 30px; border-radius: 5px;" %>
        </h2>
        <br><br><br><br>
      </div>
    </div>
        
    <div class="col-sm-6">
      <br><br><br><br><br><br><br><br><br>
      <div class="signUpForm">
        <form action="/action_page.php">
          <br>
          <h3> Create an account to host live streams! </h3><br>
          <input type="text" name="email" placeholder="Enter email"><br><br>
          <input type="text" name="username" placeholder="Username"><br><br>
          <input type="text" name="password" placeholder="Password"><br><br>
          <input type="text" name="confirm" placeholder="Confirm password"><br><br>
          <%= link_to "Create your account", new_user_registration_path, :class => "btn btn-lg btn-primary", :style => "margin-left: 0px; border-radius: 5px; width: 100%;" %>
          <br><br>
          <p id="haveAccount">Have an account? <%= link_to 'Sign in.', "/login" %></p>
          <br><br>
        </form> 
      </div>
    </div>    
</div>

