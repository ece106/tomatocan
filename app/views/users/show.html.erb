<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title> <% "Support " + @user.name + "'s Projects" %> </title>
<meta property="og:url" content="http://CrowdPublish.TV" />
<meta property="og:description" content="CrowdPublishTV helps actors, authors increase fan engagement & raise more funds" />
</head>

	<div class="container-fluid">
		<% if request.host == "crowdpublishtv.herokuapp.com" %>
			<div class="row">
				<div class="col-md-4">
					<%= render 'layouts/merchsidebar' %>
				</div>
				<div class="col-md-8">
					<%= render 'layouts/jitsi' %>
				</div>
			</div>
		<% else %>
			<%= render 'layouts/authorform' %>
			<div class="row" style="padding-top:15px;padding-bottom:30px;">
					<%= render 'layouts/streamButton' %>
			</div>
			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %> alert-dismissible" role="alert">
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				  <%= value %>
				 </div>
			<% end %>
			<div class="row">
				<div class="col-md-4">
					<%= render 'layouts/merchsidebar' %>
				</div>
				<div class="col-md-8">
					<%= render 'layouts/youtube' %>
				</div>
		</div>
		<% end %>
	</div>
